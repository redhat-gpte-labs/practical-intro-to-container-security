# the fully qualified server (or service) name
FQDN={{inventory_hostname}}.{{network_fqdn}}

# --- no modifications required below ---
[ req ]
default_bits = 2048
default_md = sha256
prompt = no
encrypt_key = no
distinguished_name = dn
x509_extensions = req_ext
req_extensions = req_ext

[ dn ]
O = Red Hat Lab
CN = $FQDN

[ req_ext ]
subjectAltName = DNS:$FQDN
